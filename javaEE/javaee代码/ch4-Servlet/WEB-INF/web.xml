<web-app xmlns="http://java.sun.com/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
   version="2.5">

  <display-name>Welcome to Tomcat</display-name>
  <description>
     Welcome to Tomcat
  </description>
	
	<!--filter的配置信息-->
	
	<filter>
		<filter-name>encodingFilter</filter-name>
		<filter-class>ch4.filter.EncodingFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>encodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	
	<!--listerner的配置信息-->
	<listener>
		<listener-class>
			ch4.listen.ServletContextAttributeListenerDemo
		</listener-class>
	</listener>
	
	<listener>
		<listener-class>
			ch4.listen.HttpSessionListenerDemo
		</listener-class>
	</listener>
	
	<!--HelloServlet的映射路径-->
	<servlet>
		<servlet-name>hello</servlet-name>
		<servlet-class>ch4.demo.HelloServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>hello</servlet-name>
		<url-pattern>/1/helloservlet</url-pattern>
	</servlet-mapping>

	<!--InputServlet的映射路径-->
	<servlet>
		<servlet-name>inputservlet</servlet-name>
		<servlet-class>ch4.demo.InputServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>inputservlet</servlet-name>
		<url-pattern>/abc/inputServlet</url-pattern>
	</servlet-mapping>

	<!--LifeCycleServlet的映射路径-->
	<servlet>
		<servlet-name>life</servlet-name>
		<servlet-class>ch4.demo.LifeCycleServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>life</servlet-name>
		<url-pattern>/lifeservlet</url-pattern>
	</servlet-mapping>
	
	<!--InitParamServlet的映射路径-->
	<servlet>
	<servlet-name>initparam</servlet-name>
	<servlet-class>ch4.demo.InitParamServlet</servlet-class>
		<!--为InitParamServlet配置初始化参数ref-->
		<init-param>
		<param-name>ref</param-name>
		<param-value>welcome to servlet study</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>initparam</servlet-name>
		<url-pattern>/initParamServlet</url-pattern>
	</servlet-mapping>

	<!--ServletContextDemoServlet的映射路径-->
	<servlet>
		<servlet-name>applicationdemo</servlet-name>
		<servlet-class>
			ch4.demo.ServletContextDemoServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>applicationdemo</servlet-name>
		<url-pattern>/servletContextDemoServlet</url-pattern>
	</servlet-mapping>
	
	<!--HttpSessionDemoServlet的映射路径-->
	<servlet>
		<servlet-name>sessiondemo</servlet-name>
		<servlet-class>
			ch4.demo.HttpSessionDemoServlet
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>sessiondemo</servlet-name>
		<url-pattern>/httpSessionDemoServlet</url-pattern>
	</servlet-mapping>
		
	<!--ClientRedirectDemo的映射路径-->
	<servlet>
		<servlet-name>client</servlet-name>
		<servlet-class>
			ch4.demo.ClientRedirectDemo
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>client</servlet-name>
		<url-pattern>/forward/myclientRedirect</url-pattern>
	</servlet-mapping>
	
	<!--ServerRedirectDemo的映射路径-->
	<servlet>
		<servlet-name>server</servlet-name>
		<servlet-class>
			ch4.demo.ServerRedirectDemo
		</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>server</servlet-name>
		<url-pattern>/forward/myserverRedirect</url-pattern>
	</servlet-mapping>
	
	<!--DealWithServlet的映射路径-->
	<servlet>
		<servlet-name>dealwithservlet</servlet-name>
		<servlet-class>ch4.demo.DealWithServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>dealwithservlet</servlet-name>
		<url-pattern>/servlet/DealWithServlet</url-pattern>
	</servlet-mapping>
	
	
	
	
</web-app>
